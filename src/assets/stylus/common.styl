@import "variable.styl"

.el-loading-mask
  background-color $color-main-bg
  opacity .4

.router-link
  color $color-btn
  &:hover
    color $color-btn-hover

/*滚动条样式重写*/
::-webkit-scrollbar
  width 10px
  background-color transparent
::-webkit-scrollbar-thumb
  width 10px
  border-radius 10px
  -webkit-box-shadow inset 0 0 6px rgba(0,0,0,.05)
  background-color $color-scrollbar-bg-thumb
::-webkit-scrollbar-track
  background-color $color-scrollbar-bg-track

/* font-size 字体大小
-------------------------- */
.font-small
  font-size 12px
.font-big
  font-size 18px
.font-bigger
  font-size 24px
.font-biggest
  font-size 28px
.font-more-big
  font-size 30px
.font-more-bigger
  font-size 34px
.font-more-biggest
  font-size 36px
.font-weight
  font-weight: bolder

/* float 浮动
-------------------------- */
.clear-both
  &:after
    display block
    content ''
    height 0
    line-height 0
    visibility hidden
    clear both
    zoom 1
.float-left
  float left
.float-right
  float right

/* position 定位
-------------------------- */
.position-relative
  position relative

/* inline-block 行内元素
-------------------------- */
.display-inline-block
  display inline-block
  vertical-align middle

/* vertical-align 行内上下居中
-------------------------- */
.vertical-middle
  vertical-align middle

/* text-align 行内元素排列
-------------------------- */
.text-align-left
  text-align left
.text-align-center
  text-align center
.text-align-right
  text-align right

/* outline 边框阴影
-------------------------- */
.outline:focus
  box-shadow 0 0 0 1px $color-btn
  border-radius 6px

/* el-button 样式重写
-------------------------- */
.el-button--default:hover
  color $color-second-font
  background-color $color-second-bg
  border-color $color-btn
.el-button--default:focus
  color $color-main-font
  background-color $color-main-bg
  border-color $color-btn-hover
.el-button.is-loading:before
  background-color transparent

/* el-select 样式重写
-------------------------- */
.el-popper[x-placement^="bottom"] .popper__arrow::after
  border-bottom-color $color-input-bg

/* el-table 样式重写
-------------------------- */
.el-table .cell
  padding 0
.el-table tr
  background-color $color-second-bg
.el-table::before
  height 0
.el-table__empty-block
  background-color $color-second-bg

/* el-dialog 样式重写
-------------------------- */
.el-dialog
  background-color $color-main-bg
.el-dialog__headerbtn .el-dialog__close
  color $color-main-font

/* el-tabs 样式重写
-------------------------- */
.el-tabs__nav-wrap::after
  background-color transparent

/* el-tooltip 样式重写
-------------------------- */
.el-tooltip__popper.is-dark
  background-color $color-main-bg
  box-shadow 0 8px 16px rgba(0, 0, 0, .4)

/* el-scrollbar__wrap 样式重写
-------------------------- */
.el-scrollbar__wrap
  background-color $color-main-fill-bg

/* el-autocomplete-suggestion 样式重写
-------------------------- */
.el-autocomplete-suggestion.is-loading li:hover
  background-color $color-table-bg-content-hover


//涨跌字体颜色
.riseFall_2
  color #b95258

.riseFall_1
  color #5a9467

.color-buy
  color $color-buy
.color-sell
  color $color-sell
.background-color-buy
  background-color $color-buy
  border none
  color white
  border-radius 3px
  &:hover
    background-color $color-buy
    opacity .7
  &:focus
    background-color $color-buy
.background-color-sell
  background-color $color-sell
  border-radius 3px
  border none
  color white
  &:hover
    background-color $color-sell
    opacity .7
  &:focus
    background-color $color-sell


//分页组件样式重写
.el-pagination button:disabled
  background transparent
.el-pager li
  background transparent
.el-pagination .btn-prev, .el-pagination .btn-next
  background: transparent

//el-dropdown-menu下拉菜单
.el-dropdown-menu
  background: $color-main-fill-bg

// el-message-box重写
.el-message-box
  background-color: $color-main-bg
  border-color: $color-main-bg
